{
  "name": "@aibadgr/router",
  "version": "0.1.0",
  "description": "Task-based LLM router (OpenAI-compatible) — cheap default (AI Badgr) + optional OpenAI/Claude with fallback, cost tracking, and routing",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "aibadgr-router": "./bin/init.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build",
    "demo": "node examples/demo.js",
    "validate": "npm run typecheck && npm test",
    "check-examples": "node examples/basic.js && echo '✓ basic.js' && node examples/routing.js && echo '✓ routing.js'"
  },
  "keywords": [
    "ai",
    "llm",
    "router",
    "openai",
    "openai-compatible",
    "anthropic",
    "claude",
    "aibadgr",
    "task-based",
    "streaming",
    "embeddings",
    "fallback",
    "cost",
    "agents",
    "workflow",
    "n8n",
    "flowise",
    "continue",
    "cline",
    "aider",
    "cursor",
    "routing",
    "cost-tracking"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaelbrinkworth/ai-task-router.git"
  },
  "homepage": "https://github.com/michaelbrinkworth/ai-task-router#readme",
  "bugs": {
    "url": "https://github.com/michaelbrinkworth/ai-task-router/issues"
  },
  "files": [
    "dist",
    "bin",
    "examples",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "openai": "^4.0.0",
    "@anthropic-ai/sdk": "^0.20.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0"
  }
}
